#set($path="http://localhost:8080/shop")
<html>
<head>
<title>产品品牌管理</title>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<link rel="stylesheet" href="$path/css/vip.css" type="text/css">
<script language="JavaScript">

	function toPage(p){
		var form = document.forms[0];
		form.currentPage.value=p;
		form.submit();
	}

    function querylink(){
    	window.location="$path/controller/brand/queryUI.do"
    }
</script>
<script language=JavaScript src="$path/js/FoshanRen.js"></script>
</head>

<body bgcolor="#FFFFFF" text="#000000" marginwidth="0" marginheight="0">
	<form action="$path/controller/brand/list.do" method="get">
	<input type="hidden" name="name" value="$!{name}"/>
	<input type="hidden" name="query" value="$!{query}"/>
	<input type="hidden" name="currentPage"/>
 	<table width="98%" border="0" cellspacing="1" cellpadding="2" align="center">
	    <tr>
	    	<td colspan="7"  bgcolor="6f8ac4" align="right">
	        总记录数${page.totalCount} | 总页数${page.totalPage} |
	        #if($page.hasPrePage)
	        <a href='javascript:toPage(${page.getPrePage()})'>上一页</a>
	        #end
	        当前第${page.currentPage}页
	        #if($page.hasNextPage)
	        <a href='javascript:toPage(${page.getNextPage()})'>下一页</a>
	        #end
	        </td>
	    </tr>
	    <tr>
	      <td width="30%" bgcolor="6f8ac4"> <div align="center"><font color="#FFFFFF">代号</font></div></td>
	      <td width="5%" nowrap bgcolor="6f8ac4"> <div align="center"><font color="#FFFFFF">修改</font></div></td>
	      <td width="20%" bgcolor="6f8ac4"> <div align="center"><font color="#FFFFFF">产品品牌名称</font></div></td>
		  <td nowrap bgcolor="6f8ac4"> <div align="center"><font color="#FFFFFF">Logo</font></div></td>
	    </tr>
	    
	    #foreach($brand in $result)
	    <tr> 
		      <td bgcolor="f5f5f5">
		      	  <div align="center">${brand.code}</div>
		      </td>
		      <td bgcolor="f5f5f5">
			      <div align="center">
			          <a href="$path/controller/brand/editUI.do?code=$!{brand.code}">
			              <img src="$path/images/edit.gif" width="15" height="16" border="0">
			          </a>
			      </div>
		      </td>
		      <td bgcolor="f5f5f5">
		      	  <div align="center">${brand.name}</div>
		      </td>
		      <td bgcolor="f5f5f5">
			       <div align="center">
			       	<img src="$path${brand.logopath}" width="80" height="80" border="0">
			       </div>	
		      </td>
		 </tr>
	     #end
	      
	      
	      <tr>
	       <td bgcolor="f5f5f5" colspan="7" align="center">
	        <table width="100%" border="0" cellspacing="1" cellpadding="3">
	          <tr> 
	            <td width="5%"></td>
	            <td width="85%">
	              <input name="AddDic" type="button" class="frm_btn" id="AddDic" onClick="javascript:window.location.href='$path/controller/brand/addUI.do'" value="添加品牌"/> &nbsp;&nbsp;
				  <input name="query" type="button" class="frm_btn" id="query" onClick="javascript:querylink()" value=" 查 询 "/> &nbsp;&nbsp;
	            </td>
	          </tr>
	        </table>
	      </td>
	    </tr>
	  </table>
      </form>
</body>
</html>